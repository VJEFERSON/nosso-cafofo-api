{
    "openapi": "3.0.0",
    "info": {
        "title": "Nosso Cafofo API",
        "description": "API do sistema do Nosso Cafofo.",
        "termsOfService": "",
        "contact": {
            "email": "valdeci_jeferson@hotmail.com.br"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3001",
            "description": "API de Desenvolvimento e Teste"
        }
    ],
    "paths": {
        "/usuario": {
            "post": {
                "summary": "Cadastro de Usuário",
                "description": "Rota para criação de usuários no sistema.",
                "tags": [
                    "Usuários"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Novo Usuario"
                            },
                            "examples": {
                                "usuario": {
                                    "value": {
                                        "nome": "João de Barro",
                                        "email": "joao@gmail.com",
                                        "senha": "senha$do$joao",
                                        "moradorId": null,
                                        "republicaId": null
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Erro ao criar usuário",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Erro"
                                },
                                "examples": {
                                    "erro": {
                                        "value": {
                                            "nome": "Erro ao criar usuário",
                                            "message": "Senha não foi informada!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Consulta Usuários",
                "description": "Rota para consulta de usuários.",
                "tags": [
                    "Usuários"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "nome",
                        "in": "query",
                        "description": "Nome do usuário para busca",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Erro ao consultar usuários",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Erro"
                                },
                                "examples": {
                                    "erro": {
                                        "value": {
                                            "nome": "Erro ao consultar usuários",
                                            "message": "Parâmetros inválidos!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Usuario"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/usuario/{id}": {
            "get": {
                "summary": "Consulta Usuário Específico",
                "description": "Rota para consulta de usuário específico pelo id (identificação do registro).",
                "tags": [
                    "Usuários"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Identificador do registro de usuário",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Erro ao consultar o usuário",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Erro"
                                },
                                "examples": {
                                    "erro": {
                                        "value": {
                                            "nome": "Erro ao consultar o usuário",
                                            "message": "Parâmetros inválidos!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Alterar Usuário",
                "description": "Rota para alteração de usuário.",
                "tags": [
                    "Usuários"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Identificador do registro de usuário",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Atualiza Usuario"
                            },
                            "examples": {
                                "usuario": {
                                    "value": {
                                        "nome": "João de Barro"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Erro ao atualizar usuário",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Erro"
                                },
                                "examples": {
                                    "erro": {
                                        "value": {
                                            "nome": "Erro ao atualizar usuário",
                                            "message": "Id (identificador) informado é inválido!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "boolean",
                                    "value": true
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "senha": {
                        "type": "string"
                    },
                    "moradorId": {
                        "type": "number"
                    },
                    "republicaId": {
                        "type": "number"
                    },
                    "createTime": {
                        "type": "string"
                    },
                    "updateTime": {
                        "type": "string"
                    },
                    "perfilId": {
                        "type": "number"
                    }
                }
            },
            "Novo Usuario": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "senha": {
                        "type": "string"
                    },
                    "moradorId": {
                        "type": "number"
                    },
                    "republicaId": {
                        "type": "number"
                    }
                }
            },
            "Atualiza Usuario": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    }
                }
            },
            "Novo Cliente": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "senha": {
                        "type": "string"
                    }
                }
            },
            "Erro": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}